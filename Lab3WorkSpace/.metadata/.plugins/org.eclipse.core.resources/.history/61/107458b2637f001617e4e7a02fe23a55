#ifndef GRAPHICS_H_
#define GRAPHICS_H_

#define GRAPHICS_FRAME_BUFFER_0_ADDR 0xC0000000  // Starting location in DDR where we will store the images that we display.
#define GRAPHICS_SCREEN_WIDTH		640		//Screen width in pixels
#define GRAPHICS_SCREEN_HEIGHT		480		//Screen height in pixels
#define GRAPHICS_BYTES_PER_PIXEL	4		//Each pixel is 4 bytes

//Clears the screen to black
void graphics_clear_screen();

#endif /* GRAPHICS_H_ */
